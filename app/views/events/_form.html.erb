<%= form_with(model: event, builder: TailwindFormBuilder, class: "space-y-6") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="rounded-md bg-red-50 p-4 mt-4" role="alert">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li>
            <p class="ml-3 text-sm font-medium text-red-800"><%= error.full_message %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
    <%= form.label :start_time %>
    <div class="flex mt-1">
      <%= form.datetime_select :start_time %>
    </div>
  </div>

  <div class="actions mt-6">
    <%= form.submit submit_text %>
  </div>
<% end %>
