<%= turbo_stream_from 'events' %>

<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
  <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
    <div class="ml-4 mt-4">
      <h1 class="text-lg leading-6 font-medium text-gray-900">
        Events
      </h1>
    </div>
    <div class="ml-4 mt-4 flex-shrink-0">
      <%= link_to "Create Event", new_event_path, class: "relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
</div>

<ul id="events" role="list">
  <%= turbo_frame_tag 'events' do %>
    <div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <%= render @events %>
    </div>
  <% end %>
</ul>

